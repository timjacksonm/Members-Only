<%- include('header') -%>
<main>
  <% if (error) { %>
  <p><%= inputName %>: <%= message %></p>
  <% } %>
  <form action="/signup" method="POST" class="form-center">
    <div class="form-grid">
      <div class="form-fields">
        <label for="username">Username:</label>
        <% if (username) { %>
        <input
          name="username"
          autocomplete="off"
          type="text"
          value="<%= username %>"
          required
        />
        <% } else{ %>
        <input name="username" autocomplete="off" type="text" required />
        <% } %>
      </div>
      <div class="form-fields">
        <label for="password">Password:</label>
        <% if (password) { %>
        <input
          name="password"
          autocomplete="off"
          type="password"
          value="<%= password %>"
          required
        />
        <% } else{ %>
        <input name="password" autocomplete="off" type="password" required />
        <% } %>
      </div>
      <div class="form-fields">
        <label for="firstName">First Name:</label>
        <% if (firstname) { %>
        <input
          name="firstname"
          autocomplete="off"
          type="text"
          value="<%= firstname %>"
        />
        <% } else{ %>
        <input name="firstName" autocomplete="off" type="text" />
        <% } %>
      </div>
      <div class="form-fields">
        <label for="lastName">Last Name:</label>
        <% if (lastname) { %>
        <input
          name="lastName"
          autocomplete="off"
          type="text"
          value="<%= lastname %>"
        />
        <% } else{ %>
        <input name="lastName" autocomplete="off" type="text" />
        <% } %>
      </div>
      <div class="form-fields">
        <label for="state">State:</label>
        <% if (state) { %>
        <input
          name="state"
          autocomplete="off"
          type="text"
          value="<%= lastname %>"
        />
        <% } else{ %>
        <input name="state" autocomplete="off" type="text" />
        <% } %>
      </div>
      <div class="form-fields">
        <label for="country">Country:</label>
        <% if (country) { %>
        <input
          name="country"
          autocomplete="off"
          type="text"
          value="<%= country %>"
        />
        <% } else{ %>
        <input name="country" autocomplete="off" type="text" />
        <% } %>
      </div>
    </div>
    <button type="submit">Submit</button>
  </form>
</main>
<%- include('footer') -%>
