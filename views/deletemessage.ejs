<%- include('header', { user: user, url: url }) -%>
<main>
  <div>
    <% if (item) { %>
    <div class="offset-children center">
      <div class="message-container">
        <div class="message-description">
          <p>Author: <%= item.username %> Status: <%= item.role %></p>
          <p><%= item.date %></p>
        </div>
        <p class="text"><%= item.message %></p>
      </div>
    </div>
    <% } %>
  </div>
  <form
    onSubmit="document.getElementById('submit').disabled=true;"
    method="POST"
    class="flex justify-content-center"
  >
    <h2 class="flex align-items-center">
      Are you sure you want to delete this message?
    </h2>
    <button class="btnStyleNo" formmethod="get" formaction="/">No</button>
    <button class="btnStyleYes" formaction="<%= url.url %>">Yes</button>
  </form>
</main>
<%- include('footer') -%>
