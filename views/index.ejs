<%- include('header', { user: user, url: url }) -%>
<main>
  <% if (user) { %>
  <button class="addBtn">
    <a href="/newmessage" class="remove-decoration">+</a>
  </button>
  <% } %>
  <div>
    <% if (messages) { %>
    <div class="offset-children center">
      <% messages.forEach(item => { %>
      <div class="message-container">
        <% if (user && user.admin) { %>
        <a
          href="/delete/?id=<%= item.id %>&username=<%= item.username %>&role=<%= item.role %>&date=<%= item.date %>&message=<%= item.message %>"
          class="delete"
          >X</a
        >
        <% } %>
        <div class="message-description">
          <p>Author: <%= item.username %> Status: <%= item.role %></p>
          <p><%= item.date %></p>
        </div>
        <p class="text"><%= item.message %></p>
      </div>
      <% }) %>
    </div>
    <% } %>
  </div>
</main>
<%- include('footer') -%>
